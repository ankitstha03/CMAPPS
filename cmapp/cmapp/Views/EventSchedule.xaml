<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cmapp.Views.EventSchedule"
              xmlns:local="using:cmapp.Converters"
                BackgroundColor="White"
             xmlns:viewModel="clr-namespace:cmapp.Models"
             Title="Schedule">

    <ContentPage.BindingContext>
        <viewModel:Notifications/>
    </ContentPage.BindingContext>
    <ListView
    x:Name="timelineListView"
    ItemSelected="timelineListView_ItemTapped"
        IsPullToRefreshEnabled="True"
        Refreshing="Onrefresh"
    RowHeight="75"
    SeparatorVisibility="None">

        <ListView.Header>
            <StackLayout Padding="20,40,0,30">
                <Label FontSize="30" TextColor="Black" Text="Event Schedule Timeline" />
                <Label FontSize="20" TextColor="Blue" Text="2018" />
            </StackLayout>
        </ListView.Header>

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid ColumnSpacing="0" RowSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Label HorizontalOptions="Center"  FontSize="20"  TextColor="Black" Text="{Binding start_date, StringFormat='{0:10}'}" />

                        <Label
              Grid.Column="2"
              Margin="20,0"
              FontSize="20" TextColor="Black"
              Text="{Binding title}" />

                        <Label
              Grid.Row="1"
              Grid.Column="2"
              Margin="20,0"
             FontSize="10" TextColor="Black"
              Text="{Binding location}" />


                        <Image Grid.Column="1" Source="Bullet.png" />

                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>



    </ListView>
</ContentPage>