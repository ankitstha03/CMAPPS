                           x:Name="videotitle"
                           HorizontalTextAlignment="Start"
                           VerticalTextAlignment="Center"
                           HorizontalOptions="StartAndExpand"
                           FontSize="16"
                           Text="{Binding title , Mode = TwoWay}"
                           TextColor="Black" >
                </Label>
              
